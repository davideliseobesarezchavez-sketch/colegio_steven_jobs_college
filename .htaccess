# üîí Deshabilitar listado de directorios
Options -Indexes

# üè† Forzar que se cargue login.php como p√°gina principal
DirectoryIndex login.php

# üîÅ Activar motor de reescritura
RewriteEngine On

# --- 1Ô∏è‚É£ Redirigir cualquier acceso directo al ra√≠z hacia dashboard.php ---
RewriteCond %{REQUEST_URI} ^/$
RewriteRule ^.*$ login.php [L]

# --- 2Ô∏è‚É£ Redirecci√≥n limpia: quitar .php de las URLs ---
RewriteCond %{THE_REQUEST} \s/+([^.]+)\.php [NC]
RewriteRule ^ %1 [R=301,L]

# --- 3Ô∏è‚É£ Permitir que las URLs sin .php funcionen ---
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{DOCUMENT_ROOT}/$1.php -f
RewriteRule ^(.+?)/?$ $1.php [L,QSA]
